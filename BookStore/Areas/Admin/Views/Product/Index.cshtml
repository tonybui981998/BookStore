@model List<Product>

<div class="container">
    <div class="row pt-4 ">
        <div class="col-6 pb-24"><h2 class="text-primary">Product list</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreateNew" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                   Title
                </th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price-List</th>
                <th>Price50</th>
                <th>Price100</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Price50</td>
                    <td>@obj.Price100</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2 h2"><i class="bi bi-pencil-square h3 text-white"></i></a>
                        </div>

                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <form method="post" asp-action="Delete" asp-controller="Product" asp-route-Id="@obj.Id">
                                <button class="btn btn-danger" type="submit" value="Delete"><i class="bi bi-trash3-fill h3 text-white"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>