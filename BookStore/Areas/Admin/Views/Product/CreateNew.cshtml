@model Product

<form method="post">
    <div class="border p-3 mt-4 ">
        <div class="row pb-2 ">
            <h2 class="text-primary">Create Catergory</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger" ></div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control mt-2"/>
           @*  <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description"></label>
            <input asp-for="Description"  type="text" class="form-control mt-2" />
          @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" type="text" class="form-control mt-2" />
            @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author"></label>
            <input asp-for="Author" type="text" class="form-control mt-2" />
            @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
         <div class="mb-3 row p-1">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice"  type="text" class="form-control mt-2" />
          @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
         <div class="mb-3 row p-1">
            <label asp-for="Price50"></label>
            <input asp-for="Price50"  type="text" class="form-control mt-2" />
          @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" type="text" class="form-control mt-2" />
            @*  <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@
        </div>
       <div class="row col-12">
            <div class="col-6 col-md-3"> <button type="submit" class="btn btn-primary form-control" >Submit</button></div>
           
                <div class="col-6 col-md-3 border"> 
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                    
                </div>
               
          
       </div>
       


       
       
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
